{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 1 --worker-class eventlet --worker-connections 1000 --timeout 30 --keepalive 2 --log-level info --access-logfile - --error-logfile - app:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/status",
    "healthcheckTimeout": 30
  }
}